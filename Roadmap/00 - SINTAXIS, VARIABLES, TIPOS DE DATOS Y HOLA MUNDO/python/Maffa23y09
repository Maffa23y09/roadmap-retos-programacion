# Crear una variable
mi_variable = "Aprendiendo Python" 

# Crear una constante (Python no tiene constantes estrictas, pero usamos convención de mayúsculas)
MI_CONSTANTE = 3.1416

# Crear variables representando los tipos de datos primitivos en Python
texto = "Hola, mundo"    # String (cadena de texto)
entero = 42              # Integer (número entero)
decimal = 3.14           # Float (número decimal)
booleano = True          # Boolean (valor lógico: True o False)
nulo = None              # NoneType (representa la ausencia de valor)

# Imprimir por terminal
print("¡Hola, Python!") 
